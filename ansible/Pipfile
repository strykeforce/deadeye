[[source]]
name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true

[scripts]
bootstrap = "echo ansible-playbook -i inventory.yaml bootstrap.yaml -e hostname=<inventory host>"
provision = "ansible-playbook -i inventory.yaml --vault-password-file=.vaultpw provision.yaml"
deploy = "ansible-playbook -i inventory.yaml --vault-password-file=.vaultpw deploy.yaml" # -l deadeye-b

[dev-packages]

[packages]
ansible = "*"

[requires]
python_version = "3.7"
